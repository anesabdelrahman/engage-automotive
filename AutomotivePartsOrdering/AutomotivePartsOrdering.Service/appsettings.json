{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/PartsOrdering-log-.txt",
          "fileSizeLimitBytes": "1073741824",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "5",
          "rollOnFileSizeLimit": "true",
          "shared": "true",
          "flushToDiskInterval": "00:00:01",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "PartOrdering"
    }
  },
  "AllowedHosts": "*",
  "ProviderSettings": {
    "PartProviderClientId": "atsjD1ESjQAc1CgYssWf3n7Ulk5s4U06",
    "PartProviderClientSecret": "MTGjsSVkT6R4dz1L",
    "PartProviderAuthorisationFlow": "clientCredentials",
    "PartProviderPartReadScope": "api.parts/read",
    "PartProviderOrderCreateScope": "api.parts-orders/write",
    "PartProviderOrderReadScope": "api.parts-orders/read",
    "PartProviderBrandReadScope": "api.parts/brands/read",
    "PartsProviderUrl": "https://api.eu-stage.keyloop.io/sample/sample/v1/parts",
    "OrderProviderUrl": "https://api.eu-stage.keyloop.io/sample/sample/v1/parts-orders",
    "BrandProviderUrl": "https://api.eu-stage.keyloop.io/sample/sample/v1/parts/brands",
    "ProviderTokenUrl": "https://api.eu-stage.keyloop.io/sample/sample/v1//oauth/client_credential/accesstoken"
  } 
}
